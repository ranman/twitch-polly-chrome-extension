{
    "manifest_version": 2,
    "name": "Polly TTS Engine",
    "description": "We are building polly extensions on twitch.tv/aws",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "polly.html"
    },
    "tts_engine": {
        "voices": [
            {
                "voice_name": "Joanna",
                "lang": "en-US",
                "gender": "female",
                "remote": true,
                "event_types": ["start", "marker", "end"]
            }
        ]
    },
    "permissions": [
        "activeTab",
        "tts",
        "storage",
        "ttsEngine"
    ]
}
